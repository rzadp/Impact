{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "allowJs": true,
    "downlevelIteration": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "esModuleInterop": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "target": "es6"
  },
  "include": [
    "lib",
    "games",
    "plugins"
  ],
  "exclude": [
    "**/dist",
    "**/cache",
  ],
}
